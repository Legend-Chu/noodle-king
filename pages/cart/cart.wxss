/* pages/cart/cart.wxss */

.good-box{
  display: flex;
  direction: column;
  align-items: center;
  border-bottom: 6rpx solid #f7f7f7;
  margin: 10rpx 20rpx 0 20rpx
}
.choose-img{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.dish-img{
  height: 200rpx;
  width: 200rpx;
}
.good-right{
  display: flex;
  flex-direction: column;
  width: 430rpx;
  margin-left:20rpx;
  height: 200rpx;
  justify-content: space-between;
}

.choose-num-box{
  display: flex;
  width: 135rpx;
  justify-content: space-between;
  align-items: center;
}
.choose-num-box image{
  width: 50rpx;
  height: 50rpx;
}
.good-right-bottom{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.good-title{
  font-size: 40rpx;
}
.good-price{
  color: red;
  font-size: 40rpx;
}

/* 底部tabbar样式 */
.all-bottom-box{
  height: 100rpx;
  background-color: #fae5e1;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.all-choose-img{
  height: 50rpx;
  width: 50rpx;
  margin-left: 20rpx;
}
.all-bottom-left{
  display: flex;
  font-size: 40rpx;
}
.left-text-unchoose{
  margin-left: 20rpx;
  color: #888585;
}
.left-text-choose{
  margin-left: 20rpx;
  color:#ff6146
}
.all-bottom-right{
  display: flex;
  flex-direction: row;
}
.total-button{
  font-size: 40rpx;
  background-color: #ff6146;
  color: #fff;
  padding: 0 60rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.total-price{
  line-height: 100rpx;
  font-size: 40rpx;
  color:#ff6146;
  margin-right:40rpx;
}
.total-price-text{
  font-size: 30rpx;
  color: #000;
  line-height: 100rpx;
  margin-right: 20rpx;
}