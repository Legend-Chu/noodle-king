/* pages/goodDetail/goodDetail.wxss */
.good-cover{
  width: 100%;
  height: 600rpx;
}
.good-price-tag{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx 20rpx;
  align-items: center;
}
.good-price{
  color: red;
  font-size: 50rpx;
}
.good-tag{
  font-size: 35rpx;
  color: rgb(117, 117, 122);
}
.good-title-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 10rpx 20rpx;
}
.good-title{
  font-size: 40rpx;
  width: 1250rpx;
}
.share-button{
  background-color: white;
  padding: 0;
  font-size: 35rpx;
  font-weight: 550;
  margin:0;
}
.good-images{
  width: 100%;
  height: 500rpx;
}
.good-detail-box{
  margin: 0 20rpx;
}
.good-detail-title{
  border-top: 3rpx solid #bdbcbc;
  font-size: 45rpx;
  font-weight: 550;
  margin: 20rpx 20rpx;
  margin-top: 50rpx;
  padding-top: 20rpx;
}
.good-text{
  font-size: 35rpx;
  margin: 20rpx 0rpx;
}


/* 底部tabbar */
.tabbar{
  position: fixed;
  display: flex;
  justify-content: space-between;
  bottom: 0;
  left: 0;
  height: 120rpx;
  background-color: white;
  width: 100%;
  flex-direction: row;
  align-items: center;
}
.cart-img{
  margin-left: 40rpx;
  width: 70rpx;
  height: 70rpx;
  margin:0 0 0 20rpx;
}
.tabbar-right{
  display: flex;
  flex-direction: row;
}
.add-cart{
  background-color: orange;
  line-height: 120rpx;
  padding: 0 40rpx;
  color: white;
  font-size: 35rpx;
}
.buy{
  background-color: red;
  line-height: 120rpx;
  padding: 0 40rpx;
  color: white;
  font-size: 35rpx;
}
.cart-num{
  background-color: red;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 70rpx;
  top:0;
  font-size: 30rpx;
  color: white;
  text-align: center;
}